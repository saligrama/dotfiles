[module/cmus]
type = custom/script

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-playing = <toggle> <label-song>  <bar-progress>
format-paused = <toggle> <label-song>  <bar-progress>
format-offline =

format-playing-foreground = ${xrdb:color6}
format-paused-foreground = ${xrdb:foreground}

label-song = %artist% - %title%

icon-play = 
icon-pause = 

bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
bar-progress-fill-foreground = ${xrdb:color6}
bar-progress-empty-foreground = ${xrdb:foreground}
bar-progress-indicator-foreground = ${xrdb:foreground}

