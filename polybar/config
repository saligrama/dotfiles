[bar/bar]
width = 100%
height = 40
clickareas = 35
monitor = eDP1

background = ${xrdb:background}
foreground = ${xrdb:foreground}

locale = en_US.UTF-8

bottom = false

spacing = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 2

font-0 = Iosevka:size=15;3
font-1 = icomoon:size=17;3
font-2 = ionicons:size=18;3
font-3 = FontAwesome:size=16;3
font-4 = DejaVu Sans:size=16;3

modules-center = spotify
modules-right = wireless-network pulseaudio battery date
modules-left = i3

[module/date]
type = internal/date
format = <date>
date = %a %l:%M %p
format-prefix-foreground = ${xrdb:color3}
format-prefix = 
format-prefix-padding = 1

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0y
format = <label>
label = %temperature%
format-prefix = TEMP
format-prefix-foreground = ${xrdb:color1}
format-prefix-padding = 1

[module/pkg]
type = custom/script
interval = 60
format = <label>
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"


[module/battery]
type = internal/battery
adapter = ADP1
battery = BAT1
poll-interval = 5
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>
time-format = %H:%M
label-charging = %percentage%%
format-charging-prefix = 
format-charging-prefix-padding = 1
format-charging-prefix-foreground = ${xrdb:color2}
label-full = FULL
format-full-prefix = 
format-full-prefix-padding = 1
format-full-prefix-foreground = ${xrdb:color2}
full-at = 96
label-discharging = %percentage%%  (%time%)
format-discharging-prefix = 
format-discharging-prefix-foreground = ${xrdb:color9}
format-discharging-prefix-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
enable-scroll = true
module-offset-y = 3

;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-3 = 4;
;ws-icon-4 = 5;
;ws-icon-5 = 6;

ws-icon-default = 

label-focused = %icon%
label-focused-foreground = ${xrdb:color9}

label-focused-padding = 1

label-unfocused = 
label-unfocused-padding = 1
label-unfocused-foreground = ${xrdb:foreground}

label-visible = %icon%
label-visible-padding = 4

label-urgent = %icon%
label-urgent-foreground = ${xrdb:color5}
label-urgent-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
sink = bluez_sink.00_E0_4C_C8_37_91.a2dp_sink

format-volume = <label-volume>
format-muted = <label-muted>
format-muted-prefix = 
format-volume-prefix = 
format-muted-prefix-padding = 1
format-volume-prefix-padding = 1
label-muted = %percentage%%
label-volume = %percentage%%
format-muted-prefix-foreground = ${xrdb:color5}
format-volume-prefix-foreground = ${xrdb:color5}

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
ping_interval = 10

format-connected = <label-connected>
label-connected = %essid%
label-disconnected = Disconnected
format-connected-prefix = 
format-disconnected-prefix = 
format-connected-prefix-padding = 1
format-disconnected-prefix-padding = 1
format-connected-prefix-foreground = ${xrdb:color6}
format-disconnected-prefix-foreground = ${xrdb:color5}

[module/xbacklight]
type = internal/backlight
card = intel_backlight
format = <label>
label =  %percentage%%
format-prefix = BRT
format-prefix-padding = 1
format-prefix-foreground = ${xrdb:color12}

[module/spotify]
type = custom/script
exec = ~/.config/polybar/spotify.sh
interval = 1

[module/mail]
type = custom/script
interval = 10
format = <label>
exec = ~/.config/polybar/mail 2> /dev/null
