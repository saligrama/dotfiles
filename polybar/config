[bar/bottom]
width = 100%
height = 40
clickareas = 35
monitor = eDP1

background = ${xrdb:background}
foreground = ${xrdb:foreground}

locale = en_US.UTF-8

bottom = true

tray-position = right
spacing = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 5

font-0 = Droid Sans:size=17;3
font-1 = icomoon:size=18;3
font-2 = FontAwesome:size=18;3

modules-left = i3
modules-right = mail pkg temperature wireless-network date

[bar/top]
width = 100%
height = 40
clickareas = 35
monitor = eDP1

background = ${xrdb:background}
foreground = ${xrdb:foreground}

locale = en_US.UTF-8

bottom = false

spacing = 0
padding-right = 2
module-margin-left = 0
module-margin-right = 5

font-0 = Droid Sans:size=17;3
font-1 = icomoon:size=18;3
font-2 = FontAwesome:size=18;3
font-3 = DejaVu Sans:size=18;3

modules-center = mpd
modules-left = xbacklight
modules-right = volume battery

[module/date]
type = internal/date
format = <date>
date =   %a %l:%M %p
format-foreground = ${xrdb:color3}

[module/temperature]
type = internal/temperature
interval = 10
thermal-zone = 0y
warn-temperature = 100
format = <ramp> <label>
format-warn = <ramp>
label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${xrdb:color3}
ramp-0 = 
ramp-1 = 
ramp-foreground = ${xrdb:color2}
label-foreground = ${xrdb:color2}
ramp-0-foreground = ${xrdb:color2}


[module/pkg]
type = custom/script
interval = 60
format = <label>
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"


[module/battery]
type = internal/battery
adapter = ADP1
battery = BAT1
poll-interval = 5
format-charging = <label-charging>  <bar-capacity>
format-discharging = <label-discharging>  <bar-capacity>
format-full = <label-full>  <bar-capacity>
time-format = %H:%M
label-charging =    %percentage%%  (%time%)
label-charging-foreground = ${xrdb:color2}
label-full =  FULL
label-full-foreground = ${xrdb:color2}
label-discharging =   %percentage%%  (%time%)
label-discharging-foreground = ${xrdb:color2}
bar-capacity-width = 10
bar-capacity-fill = ─
bar-capacity-empty = ─
bar-capacity-indicator = |
bar-capacity-fill-foreground = ${xrdb:color2}
bar-capacity-empty-foreground = ${xrdb:foreground}
bar-capacity-indicator-foreground = ${xrdb:foreground}

